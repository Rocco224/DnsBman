@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <AuthorizeView>
            <Authorized>
                <div class="d-flex justify-content-between align-items-center top-row px-4 ">
                    <div>
                        <i class="bi bi-person-check text-success fs-5"></i> @context.User.Identity.Name
                    </div>
                    <NavLink title="Logout" class="nav-link btn btn-danger text-white shadow-sm" href="logout">
                        <i class="bi bi-box-arrow-right"></i>
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="d-flex justify-content-end align-items-center top-row bg-secondary bg-opacity-10 px-4 ">
                    <NavLink title="Login" class="nav-link btn btn-success text-white shadow-sm" href="login">
                        <i class="bi bi-box-arrow-in-right"></i>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>